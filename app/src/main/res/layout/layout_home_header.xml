<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rr_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp5"
        android:background="@drawable/home_bg"
        android:layout_margin="@dimen/dp10"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <com.pepperwallet.app.widget.UserAvatar
            android:id="@+id/user_address_blockie"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dp10"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_address_blockie"
            android:orientation="vertical">

            <com.pepperwallet.app.widget.LargeTitleView
                android:id="@+id/large_title_view"
                android:layout_width="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_scan"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera_scan"/>

    </RelativeLayout>




