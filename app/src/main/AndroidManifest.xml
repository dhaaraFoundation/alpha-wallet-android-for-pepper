<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pepperwallet.app"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="false" />

    <application
        android:name="com.pepperwallet.app.App"
        android:allowBackup="false"
        android:extractNativeLibs="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:replace="android:name, android:theme, android:allowBackup">
        <activity
            android:name="com.pepperwallet.app.ui.SettingGeneral"
            android:exported="false" />
        <activity
            android:name="com.pepperwallet.app.ui.SettingWallet"
            android:exported="false" />

        <activity android:name=".ui.Tutorial"
            android:exported="false"
            android:label="@string/onboarding"/>
        <activity
            android:name="com.pepperwallet.app.ui.HomeActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Splash"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="aw.app" />
                <data android:host="www.aw.app" />
                <data android:pathPrefix="/" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="wc" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.ALTERNATIVE" />
                <category android:name="android.intent.category.SELECTED_ALTERNATIVE" />

                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="text/xml" />
                <data android:mimeType="text/tsml" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.tsml" />
                <data android:pathPattern=".*\\..*\\.tsml" />
                <data android:pathPattern=".*\\..*\\..*\\.tsml" />
                <data android:pathPattern=".*\\.xml" />
                <data android:pathPattern=".*\\..*\\.xml" />
                <data android:pathPattern=".*\\..*\\..*\\.xml" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pepperwallet.app.ui.ApiV1Activity"
            android:label="API V1 Activity"
            android:theme="@style/AppTheme.NoActionBar.Transparent" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name="com.pepperwallet.app.ui.WalletsActivity"
            android:label="@string/title_account_list" />
        <activity
            android:name="com.pepperwallet.app.ui.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar.Splash" />

        <service
            android:name="com.pepperwallet.app.service.WalletConnectService"
            android:enabled="true" />

        <activity
            android:name="com.pepperwallet.app.ui.NameThisWalletActivity"
            android:label="@string/name_this_wallet"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.pepperwallet.app.ui.ImportWalletActivity"
            android:label="@string/title_import"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name="com.pepperwallet.app.ui.TransactionDetailActivity"
            android:label="@string/title_transaction_details" />
        <activity
            android:name="com.pepperwallet.app.ui.MyAddressActivity"
            android:label="@string/title_my_address" />
        <activity
            android:name="com.pepperwallet.app.ui.SendActivity"
            android:label="@string/title_activity_send"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.pepperwallet.app.ui.AddTokenActivity"
            android:label="@string/title_add_token" />
        <activity
            android:name="com.pepperwallet.app.ui.AssetDisplayActivity"
            android:label="@string/title_use_token" />
        <activity
            android:name="com.pepperwallet.app.ui.RedeemSignatureDisplayActivity"
            android:label="@string/title_use_token" />
        <activity
            android:name="com.pepperwallet.app.ui.GasSettingsActivity"
            android:label="@string/title_send_settings" />
        <activity
            android:name="com.pepperwallet.app.ui.SellDetailActivity"
            android:label="@string/action_sell"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.pepperwallet.app.ui.RedeemAssetSelectActivity"
            android:label="@string/title_redeem" />
        <activity
            android:name="com.pepperwallet.app.ui.ImportTokenActivity"
            android:label="@string/title_import_token" />
        <activity
            android:name="com.pepperwallet.app.ui.TransferTicketDetailActivity"
            android:label="@string/label_transfer_ticket_detail" />
        <activity
            android:name="com.pepperwallet.app.ui.TokenDetailActivity"
            android:label="@string/token_details" />
        <activity
            android:name="com.pepperwallet.app.ui.Erc20DetailActivity"
            android:label="@string/erc20_details" />
        <activity
            android:name="com.pepperwallet.app.ui.TokenFunctionActivity"
            android:label="@string/token_function" />
        <activity
            android:name="com.pepperwallet.app.ui.FunctionActivity"
            android:label="@string/token_function" />
        <activity
            android:name="com.pepperwallet.app.ui.WalletActionsActivity"
            android:label="Wallet Actions" />
        <activity
            android:name="com.pepperwallet.app.ui.AddEditDappActivity"
            android:label="Add DApp" />
        <activity
            android:name="com.pepperwallet.app.ui.SelectNetworkActivity"
            android:label="Select DApp Browser Network" />
        <activity
            android:name="com.pepperwallet.app.ui.SelectNetworkFilterActivity"
            android:label="Select Network Filters" />
        <activity
            android:name="com.pepperwallet.app.ui.TokenManagementActivity"
            android:label="Manage Tokens" />
        <activity
            android:name="com.pepperwallet.app.ui.SelectLocaleActivity"
            android:label="Select Language" />
        <activity
            android:name="com.pepperwallet.app.ui.SelectCurrencyActivity"
            android:label="Select Currency" />
        <activity
            android:name="com.pepperwallet.app.ui.ScammerWarningActivity"
            android:label="Scammer Warning"
            android:noHistory="true" />
        <activity
            android:name="com.pepperwallet.app.ui.BackupKeyActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.pepperwallet.app.ui.SupportSettingsActivity"
            android:label="Support Settings" />
        <activity
            android:name="com.pepperwallet.app.ui.AdvancedSettingsActivity"
            android:label="Advanced Settings" />
        <activity
            android:name="com.pepperwallet.app.ui.StaticViewer"
            android:label="View Text" />
        <activity
            android:name="com.pepperwallet.app.ui.TokenScriptManagementActivity"
            android:label="@string/tokenscript_management" />
        <activity
            android:name="com.pepperwallet.app.ui.TokenActivity"
            android:label="@string/activity_label" />
        <activity
            android:name="com.pepperwallet.app.ui.WalletConnectActivity"
            android:label="WalletConnect"
            android:launchMode="singleTop" />
        <activity
            android:name="com.pepperwallet.app.ui.BackupFlowActivity"
            android:label="WalletConnect" />
        <activity
            android:name="com.pepperwallet.app.ui.SignDetailActivity"
            android:label="Sign Details" />
        <activity
            android:name="com.pepperwallet.app.ui.WalletConnectSessionActivity"
            android:label="WalletConnect Sessions" />
        <activity
            android:name="com.pepperwallet.app.ui.TransactionSuccessActivity"
            android:label="Transaction Success" />
        <activity
            android:name="com.pepperwallet.app.ui.SetPriceAlertActivity"
            android:label="Set New Alert"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.pepperwallet.app.ui.AddCustomRPCNetworkActivity"
            android:label="@string/title_activity_add_custom_rpcnetwork" />
        <activity
            android:name="com.pepperwallet.app.ui.NFTActivity"
            android:label="ERC721 Master Activity" />
        <activity
            android:name="com.pepperwallet.app.ui.Erc1155AssetSelectActivity"
            android:label="ERC1155 Asset Selection" />
        <activity
            android:name="com.pepperwallet.app.ui.NFTAssetDetailActivity"
            android:label="ERC1155 Asset Details" />
        <activity
            android:name="com.pepperwallet.app.ui.Erc1155AssetListActivity"
            android:label="ERC1155 Asset Details" />
        <activity
            android:name="com.pepperwallet.app.ui.TransferNFTActivity"
            android:label="NFT Transfer" />
        <activity
            android:name="com.pepperwallet.app.ui.SelectThemeActivity"
            android:label="Select Mode" />
        <activity
            android:name="com.pepperwallet.app.ui.SearchActivity"
            android:label="Search Tokens" />
        <activity
            android:name="com.pepperwallet.app.ui.QRScanning.QRScanner"
            android:label="@string/qr_scanner" />
        <activity
            android:name="com.pepperwallet.app.ui.SwapActivity"
            android:label="Native Swap"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.pepperwallet.app.ui.NodeStatusActivity"
            android:label="@string/action_node_status" />

        <service
            android:name="com.pepperwallet.app.service.PriceAlertsService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="true" />
    </application>

</manifest>